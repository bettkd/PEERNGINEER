extends ../layouts/nonav

block content
	#login.access
		.access-logo
			a(href="/")
				img.access-img(src="/images/peerngineer-org.png")
		.login.container-access
			h1.heading Login
			form(id="frmlogin" action="/access/login" method="post")
				if newuser
					.success
						p= newuser
				if reset
					.success
						p= reset 
				if err
					.errors
						p= err
				.field
					label(for="email") Username
					input#email.focus(type="text", name="email", value= (!!email) ? email : "")
				.field
					label(for="password") Password
					input#password(type="password", name="password")
				.field
					button.button.btn-large(id="btnLogin") Login
			p Forgot your password? <a href="/access/resetpasswd">Reset Password</a>
			p Don't have an account? <a href="/access/register">Register</a>
			
block js
	//- reset sessionStorage.welcomed
	script.
		sessionStorage.removeItem('welcomed');
