		title= title
		
		//- bootstrap
		link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7", crossorigin="anonymous")
		//- custom stylesheets
		link(rel='stylesheet', href='/stylesheets/style.css')
	
	body.nonav
		
		#home-back-cont
			a#nonav-home-btn(href="/", title="Home")
				span.glyphicon.glyphicon-home
			a#nonav-back-btn(href="#{referer}", title="Back")
				span.nonav-back-btn
			if isUser
				a#nonav-logout-btn(href="/access/logout", title="Logout")
					span.glyphicon.glyphicon-log-out
			
		block content
		
		script(src="http://code.jquery.com/jquery-1.12.0.min.js", type="text/javascript")
		script(src="http://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js")
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js", type="text/javascript")
		script(src="/js/peerngineer.js")
		
		block js
